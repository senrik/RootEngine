#version 330 core

layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aTexCoord;

out vec2 TexCoord;


uniform mat4 view;
uniform mat4 projection;
uniform mat4 modelTrans;
uniform mat4 modelRot;

void main() {
	gl_Position = projection * view * modelTrans * modelRot* vec4(aPos, 1.0);
	TexCoord = aTexCoord;
}